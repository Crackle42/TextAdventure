<BoxLayoutWithActionBar>:
    orientation: "vertical"
    ActionBar:
        ActionView:
            ActionPrevious:
                #title: root.title
                #use for different titles on each screen. Also add title: "XXX" at the corresponding screen
                title: "Zurück"
                on_release: app.manager.pop()
                app_icon: "images/lab_logo.png" #"" for empty icon
                app_icon_height: "28dp"
                app_icon_width: "28dp"


<BoxLayoutWithMainMenu>:
    orientation: "vertical"
    ActionBar:
        ActionView:
            ActionPrevious:
                title: "Zum Hauptmenü"
                #on_release: app.manager.push("MainMenu")
                on_release: app.manager.current = "MainMenu"
                app_icon: "images/lab_logo.png"
                app_icon_height: "28dp"
                app_icon_width: "28dp"